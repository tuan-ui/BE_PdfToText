# Stage 1: Build với Maven
FROM maven:3.9.6-eclipse-temurin-17 AS builder


WORKDIR /build
COPY . .

# Build ứng dụng và tạo file JAR
RUN mvn clean install -DskipTests

# Stage 2: Runtime nhẹ với JDK + LibreOffice
FROM openjdk:17-jdk-slim

# Cài LibreOffice & font
RUN apt-get update && apt-get install -y \
    libreoffice \
    default-jre \
    fonts-dejavu \
    && apt-get clean

WORKDIR /app

# Copy file cấu hình (nếu cần)
COPY ./environment.env /app/environment.env

# Copy JAR đã build ở stage 1
COPY --from=builder /build/target/NOFFICE-main-0.0.1-SNAPSHOT.jar .

EXPOSE 8081

# Chạy app
ENTRYPOINT ["java", "-jar", "NOFFICE-main-0.0.1-SNAPSHOT.jar"]
